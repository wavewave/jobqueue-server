  hs-source-dirs: exe
  Build-Depends: base == 4.*, 
                 mtl, 
                 jobqueue-common, 
                 yesod, 
                 yesod-core, 
                 bytestring, 
                 wai-extra, 
                 wai, 
                 aeson,
                 containers,
                 acid-state, 
                 attoparsec, 
                 jobqueue-server


  ghc-options: 	-Wall -O2 -threaded -funbox-strict-fields -fno-warn-unused-do-bind
  ghc-prof-options: -caf-all -auto-all


